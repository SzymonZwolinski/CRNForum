@using Platender.Front.State
@inherits LayoutComponentBase
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <div style="margin-bottom: 58px">
            <NavMenu />
    </div>
    <MudMainContent>
            @Body
    </MudMainContent>
</MudLayout>

@code {
    [CascadingParameter]
    public AccountState AccountState { get; set; } = new();
    protected override async Task OnInitializedAsync()
    {
        AccountState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AccountState.OnChange -= StateHasChanged;
    }
}
